import java.util.Scanner;

public class scanner {

	public static void main(String[] args) {

		System.out.print("Enter an integer:");
		Scanner input = new Scanner(System.in);
		int integer = input.nextInt();
		System.out.println("You entered the integer "+integer);
		
		System.out.print("Enter a double (decimal) value:");
		double decimal = input.nextDouble();
		System.out.println("You entered the double value "+decimal);
		
		System.out.print("Enter a string without space:");
		String string = input.next();
		System.out.println("You entered the string "+string);
		
	}

}
