import java.util.Scanner;

public class minutes_and_seconds {

	public static void main(String[] args) {

		System.out.println("This program converts seconds to minutes and seconds");
		
		System.out.print("Number of seconds?");
		Scanner input = new Scanner(System.in);
		int seconds = input.nextInt();
		
		System.out.print(seconds+" seconds is "+(seconds/60)+" minutes and "+(seconds%60)+" seconds");
		
	}

}
